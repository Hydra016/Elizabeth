
<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">
            {{ section.settings.subtext }}
        </p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
{
"name": "Template 404",
"tag": "section",
"class": "flex items-center justify-center text-center py-7 h-screen flex-col",
"settings": [
{
"type": "text",
"id": "title",
"default": "404 not found",
"label": "404 Heading Title"
},
{
"type": "text",
"id": "subtext",
"default": "page not found",
"label": "404 subtext"
},
{
"type": "text",
"id": "button_label",
"default": "Back to homepage",
"label": "Button label"
},
{
"type": "url",
"id": "button_url",
"default": "",
"label": "Button URL"
}
]
}
{% endschema %}